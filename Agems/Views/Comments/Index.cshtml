@using Agems.Models
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@model IEnumerable<Agems.Comment>

@{
    ViewData["Title"] = "Index";
    string Login = "";
    if (User.Identity.IsAuthenticated)
    {
        Login = @HttpContextAccessor.HttpContext.Session.GetString("GitHub");
    }
}

<h1>@ViewBag.Sound.Name</h1>
<p>
    @ViewBag.Sound.About
</p>
<audio controls>
    <source src="~/sounds/@ViewBag.Sound.SoundPath" type="audio/mpeg">
</audio>
<p>
    Author: @ViewBag.Sound.Author
</p>
    @if (User.Identity.IsAuthenticated)
    {
        <p>
        <a asp-action="Create" asp-route-id="@ViewBag.Sound.Id">Add comment</a>
        </p>
    }else{
        <p> Log in to add comments </p>
    }

@foreach (var item in Model) {
<div class="card border-warning mb-3" style="width: 70%">
    <div class="card-header">
        @item.Author
        <div style="float:right; z-index: 1">
            @if(Login == item.Author){
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> <span>|</span>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            }
        </div>
    </div>
      <div class="card-body">
        <p class="card-text"> @item.Text </p>
      </div>
</div>

}

<a asp-action="Index" asp-controller="Sounds" asp-route-id="@ViewBag.Sound.CategoryId">Back to Sounds</a>

